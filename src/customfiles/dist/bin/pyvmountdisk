#!/bin/sh
clear

if  [ -c "/dev/ada0" ]  ; then
substring=ada0 
else
substring=da0
fi

substring2=da
substring3=wd
substring4=p
substring5=s

# unmount all
cd /dev

for i in $( ls ); do
if [ "$i" != "${i%$substring*}" ]; then
    echo "$substring IS in $i"
else
if [ "$i" != "${i%$substring2*}" ] || [ "$i" != "${i%$substring3*}" ] ; then
if [ "$i" != "${i%$substring4*}" ] || [ "$i" != "${i%$substring5*}" ] ; then
echo "Substring IS in $i"
umount /dev/$i  
fi
fi
fi
done

#read some
clear

 if [ -d "/media/disk" ]; then 
rmdir /media/disk/* 
else
mkdir /media/disk
fi
echo "removed dir"

#read some
clear

cd /dev

# mount all
for i in $( ls ); do
if [ "$i" != "${i%$substring*}" ]; then
    echo "$substring IS in $i"
else
if [ "$i" != "${i%$substring2*}" ] || [ "$i" != "${i%$substring3*}" ] ; then
if [ "$i" != "${i%$substring4*}" ] || [ "$i" != "${i%$substring5*}" ] ; then
echo "Substring IS in $i"
mkdir /media/disk/$i
# trying to mount ufs
mount /dev/$i /media/disk/$i
if [ $? -eq 0 ]; then
mounted="ufs_$i"
clear
else
# trying to mount msdos
mount_msdosfs /dev/$i /media/disk/$i
if [ $? -eq 0 ]; then
mounted="msdos_$i"
clear
else
# trying to mount ext4
ext4fuse /dev/$i /media/disk/$i
if [ $? -eq 0 ]; then
mounted="ext4_$i"
clear
else
# trying to mount ntfs
ntfs-3gx /dev/$i /media/disk/$i
if [ $? -eq 0 ]; then
mounted="ntfs_$i"
clear
else
mounted="nothing"
rmdir /media/disk/$i
clear
fi
fi
fi
fi
echo "$i was mounted on $mounted"

fi
fi
fi
done
echo "done"

# read some
clear

xfe /media/disk
